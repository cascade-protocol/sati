{
  "name": "sati-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "anchor build",
    "test": "cargo test -p sati && pnpm test:sdk:unit",
    "test:rust": "cargo test -p sati",
    "test:sdk": "pnpm --filter @cascade-fyi/sati-sdk test",
    "test:sdk:unit": "pnpm --filter @cascade-fyi/sati-sdk exec vitest run tests/unit/",
    "test:sdk:integration": "pnpm --filter @cascade-fyi/sati-sdk exec vitest run tests/integration/",
    "test:sdk:e2e": "pnpm --filter @cascade-fyi/sati-sdk exec vitest run tests/e2e/",
    "test:smoke": "SOLANA_CLUSTER=devnet pnpm vitest run tests/smoke/",
    "test:smoke:mainnet": "SOLANA_CLUSTER=mainnet pnpm vitest run tests/smoke/",
    "test:all": "pnpm test && pnpm test:sdk && pnpm test:smoke",
    "type-check": "tsc --noEmit && pnpm --filter @cascade-fyi/sati-sdk run type-check",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "check": "pnpm type-check && cargo fmt --all -- --check && cargo clippy -p sati -- -D warnings && biome check --write",
    "clean": "rm -rf target test-ledger .anchor"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@lightprotocol/stateless.js": "0.22.1-alpha.5",
    "@coral-xyz/anchor": "^0.32.1",
    "@solana-program/system": "^0.10.0",
    "@solana-program/token": "^0.8.0",
    "@solana/kit": "^5.0.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.3",
    "@types/bn.js": "^5.2.0",
    "@types/node": "^24.10.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.12"
  }
}
