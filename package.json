{
  "name": "sati-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "test:sdk": "pnpm --filter @sati/sdk test",
    "test:smoke": "SOLANA_CLUSTER=devnet pnpm vitest run tests/smoke.test.ts",
    "test:smoke:mainnet": "SOLANA_CLUSTER=mainnet pnpm vitest run tests/smoke.test.ts",
    "type-check": "tsc --noEmit && pnpm --filter @sati/sdk type-check",
    "clean": "rm -rf target test-ledger .anchor"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana-program/system": "^0.10.0",
    "@solana-program/token": "^0.8.0",
    "@solana/kit": "^5.0.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.3",
    "@types/bn.js": "^5.2.0",
    "@types/node": "^24.10.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.12"
  }
}
