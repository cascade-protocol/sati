{
  "name": "sati-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run -F dashboard dev",
    "localnet": "light test-validator",
    "localnet:init": "cd packages/sdk && pnpm tsx scripts/deploy-and-initialize.ts",
    "build": "anchor build && pnpm -r --if-present run build",
    "lint": "biome check --write",
    "check": "pnpm -r --if-present run type-check && pnpm lint",
    "check:rust": "cargo fmt --all -- --check && cargo clippy -p sati -- -D warnings",
    "test": "cargo test -p sati && pnpm test:sdk",
    "test:sdk": "pnpm --filter @cascade-fyi/sati-sdk test",
    "clean": "pnpm -r --if-present run clean && rm -rf target test-ledger .anchor",
    "size": "pnpm build && size-limit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@coral-xyz/anchor": "^0.32.1",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@types/node": "^24.10.1",
    "size-limit": "^12.0.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.16"
  },
  "pnpm": {
    "overrides": {
      "ws": "8.18.3",
      "@solana/kit": "5.1.0",
      "@solana/sysvars": "5.1.0",
      "@solana-program/compute-budget": "0.11.0",
      "@solana-program/token": "0.9.0",
      "@solana-program/token-2022": "0.6.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@solana/kit": "5",
        "@solana-program/compute-budget>@solana/kit": "*",
        "@solana-program/token>@solana/kit": "*",
        "@solana-program/token-2022>@solana/kit": "*",
        "@cloudflare/vite-plugin>wrangler": "4"
      },
      "ignoreMissing": [
        "@solana/sysvars"
      ]
    }
  },
  "packageManager": "pnpm@10.26.2"
}
