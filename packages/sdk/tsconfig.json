{
  "compilerOptions": {
    "target": "ES2020",
    "module": "preserve",
    "lib": ["ES2020"],
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}
